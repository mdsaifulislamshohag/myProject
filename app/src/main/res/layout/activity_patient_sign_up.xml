<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:background="@color/blue_grey_800"
    tools:context=".PatientSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/overlay_dark_30"
            android:orientation="vertical"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="100dp"
                android:tint="@color/green_300"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/ic_profile"
                android:layout_height="100dp" />
            <TextView
                android:layout_gravity="center"
                android:text="REGISTER  FORM"
                android:textColor="@color/indigo_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_name_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="e.g : Saiful Islam Shohag"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"

                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_email_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="saiful@gmail.com"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Mobile"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_mobile_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="+8801XXXXXXXXX"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Address"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_address_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="e.g: Mirpur road,Dhaka"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Age"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_age_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="e.g: 24"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Gender"
                    android:textSize="@dimen/text_view_size" />

                <Spinner
                    android:id="@+id/patient_sign_up_gender_spinner"
                    android:layout_width="0dp"
                    android:textColor="@color/blue_grey_200"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue_grey_200"
                    android:text="Blood Group"
                    android:textSize="@dimen/text_view_size" />

                <Spinner
                    android:id="@+id/patient_sign_up_blood_group_spinner"
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="@color/blue_grey_200"
                    android:gravity="center_vertical"
                    android:text="Password"
                    android:textSize="@dimen/text_view_size" />

                <EditText
                    android:id="@+id/patient_sign_up_password_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="***********"
                    android:theme="@style/EditText.Grey"
                    android:textColor="@color/overlay_dark_80"
                    android:textColorHint="@color/blue_grey_600"
                    android:inputType="text" />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/patient_sign_up_account_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_green_300"
            android:text="Register"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/blue_grey_900"/>

    </LinearLayout>

</ScrollView>